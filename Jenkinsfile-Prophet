#!groovy

node('scc-connect') {
  stage('checkout') {
    git 'git@github.com:SUSE/connect.git'
  }

  stage('copy configuration') {
    sh 'cp /home/jenkins/options-local-connect-prophet.yml prophet/options-local.yml'
  }

  stage('run prophet') {
    dir('./prophet') {
      sh 'ruby ./prophet.rb'
    }
  }
}
